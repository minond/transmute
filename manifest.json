{
  "manifest_version": 2,

  "name": "Transmutr",
  "description": "Share music your way. Hear music your way.",
  "version": "0.0.4",

  "options_page": "view/options.html",

  "background": {
    "scripts": ["transmutr.js"]
  },

  "browser_action": {
      "default_title": "Transmutr",
      "default_icon": "/img/extension-icon.png"
  },

  "icons": {
      "16": "/img/16.png",
      "48": "/img/extension-icon.png",
      "128": "/img/128.png"
  },

  "permissions": [
    "tabs",
    "webRequest",
    "management",
    "*://www.rdio.com/",
    "*://*.spotify.com/",
    "*://play.google.com/",
    "*://*.last.fm/",
    "*://itunes.apple.com/",
    "*://on.beatsmusic.com/"
  ]
}
